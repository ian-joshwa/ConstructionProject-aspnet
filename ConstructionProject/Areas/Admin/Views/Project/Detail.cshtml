@model Construction.Models.ViewModels.ProjectVM

@{
	ViewData["Title"] = Model.Project.Name;
}


<style>

	.projectDetail {
		width: 100%;
		height: 450px;
		margin: auto;
		object-fit: cover;
	}

	.projectText {
		padding-top: 50px;
	}

</style>

<div class="row mt-5 mb-4">

	<div class="col-6 projectText">
		<h1>@Model.Project.Name</h1>
		<h3 class="mt-3">@Model.Project.Address</h3>
		<p class="mt-1 mb-0">Number Of Bathrooms: @Model.Project.NumberOfBathrooms</p>
		<p class="mt-1">Number Of Bedrooms: @Model.Project.NumberOfBedrooms</p>
	</div>
	<div class="col-6">
		<img class="projectDetail" src="@Model.Project.ImageUrl" alt="@Model.Project.Name image" />
	</div>

</div>