@model Construction.Models.ViewModels.ServiceVM

@{
	ViewData["Title"] = "Delete Service";
}

<style>

	.serviceImage {
		width: 350px !important;
		height: 200px !important;
		object-fit: cover;
	}

</style>

<form method="post">
	<div class="border p-4">
		<div class="row p-3 mb-3">
			<h2>Delete Service</h2>
			<hr />
		</div>
		<input asp-for="Service.Id" type="hidden" />
		<div class="row mb-3">
			<label asp-for="Service.Name">Service Name</label>
			<input asp-for="Service.Name" class="form-control" value="@Model.Service.Name" disabled/>
			<span asp-validation-for="Service.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Service.Description">Service Description</label>
			<textarea asp-for="Service.Description" class="form-control" disabled>@Model.Service.Description</textarea>
			<span asp-validation-for="Service.Description" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label>Service Image</label>
			<input asp-for="Service.ImageUrl" style="visibility:hidden;" class="form-control"/>
			<img src="@Model.Service.ImageUrl" class="serviceImage"/>
			<span asp-validation-for="Service.ImageUrl" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="Service.IsFeatured">Is Featured</label>
			<input asp-for="Service.IsFeatured" type="checkbox" disabled style="width:18px;height:18px; margin-left:20px;margin-top:8px;" value="@Model.Service.IsFeatured" />
			<span asp-validation-for="Service.IsFeatured" class="text-danger"></span>
		</div>

		<button class="btn btn-danger" type="submit">Delete</button>
		<a asp-area="Admin" asp-controller="Service" asp-action="Home" class="btn btn-dark">Back To List</a>
	</div>
</form>


@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}