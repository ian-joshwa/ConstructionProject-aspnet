@model Construction.Models.ViewModels.ServiceVM

@{
	ViewData["Title"] = "Add Service";
}

<form method="post" enctype="multipart/form-data">
	<div class="border p-4">
		<div class="row p-3 mb-3">
			<h2>Add Service</h2>
			<hr />
		</div>
		<div class="row mb-3">
			<label asp-for="Service.Name">Service Name</label>
			<input asp-for="Service.Name" class="form-control" />
			<span asp-validation-for="Service.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Service.Description">Service Description</label>
			<textarea asp-for="Service.Description" class="form-control"></textarea>
			<span asp-validation-for="Service.Description" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="Service.ImageUrl">Service Image</label>
			<input type="file" name="file" asp-for="Service.ImageUrl" class="form-control" />
			<span asp-validation-for="Service.ImageUrl" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="Service.IsFeatured">Is Featured</label>
			<input asp-for="Service.IsFeatured" type="checkbox" style="width:18px;height:18px; margin-left:20px;margin-top:8px;"/>
			<span asp-validation-for="Service.IsFeatured" class="text-danger"></span>
		</div>

		<button class="btn btn-success" type="submit">Add</button>
		<a asp-area="Admin" asp-controller="Service" asp-action="Home" class="btn btn-dark">Back To List</a>
	</div>
</form>


@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}