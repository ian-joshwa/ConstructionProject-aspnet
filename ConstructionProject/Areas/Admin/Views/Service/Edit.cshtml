@model Construction.Models.ViewModels.ServiceVM

@{
	ViewData["Title"] = "Edit Service";
}

<style>

	.serviceImage {
		width: 350px !important;
		height: 200px !important;
		object-fit: cover;
	}

</style>

<form method="post" enctype="multipart/form-data">
	<div class="border p-4">
		<div class="row p-3 mb-3">
			<h2>Edit Service</h2>
			<hr />
		</div>
		<input asp-for="Service.Id" type="hidden"/>
		<div class="row mb-3">
			<label asp-for="Service.Name">Service Name</label>
			<input asp-for="Service.Name" class="form-control" value="@Model.Service.Name"/>
			<span asp-validation-for="Service.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="Service.Description">Service Description</label>
			<textarea asp-for="Service.Description" class="form-control">@Model.Service.Description</textarea>
			<span asp-validation-for="Service.Description" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<input asp-for="Service.ImageUrl" type="hidden"/>
			<label>Current Image</label>
			<img src="@Model.Service.ImageUrl" class="serviceImage mb-3" />
			<label>Upload New Service Image</label>
			<input type="file" name="file" class="form-control"/>
			<span asp-validation-for="Service.ImageUrl" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="Service.IsFeatured">Is Featured</label>
			<input asp-for="Service.IsFeatured" type="checkbox" style="width:18px;height:18px; margin-left:20px;margin-top:8px;"/>
			<span asp-validation-for="Service.IsFeatured" class="text-danger"></span>
		</div>

		<button class="btn btn-success" type="submit">Update</button>
		<a asp-area="Admin" asp-controller="Service" asp-action="Home" class="btn btn-dark">Back To List</a>
	</div>
</form>


@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}