
@model Construction.Models.ViewModels.StockTypeVM

@{
	ViewData["Title"] = "Stock Type";
}


<form method="post">
	<div class="border p-4">
		<div class="row p-3 mb-3">
			<h2>Delete Stock Type</h2>
			<hr />
		</div>
		<input asp-for="StockType.Id" type="hidden" />
		<div class="row mb-3">
			<label asp-for="StockType.Name">Stock Type Name</label>
			<input asp-for="StockType.Name" class="form-control" value="@Model.StockType.Name" disabled/>
			<span asp-validation-for="StockType.Name" class="text-danger"></span>
		</div>
		<div class="row mb-3">
			<label asp-for="StockType.StockUnit">Stock Type Unit</label>
			<input asp-for="StockType.StockUnit" class="form-control" value="@Model.StockType.StockUnit" disabled/>
			<span asp-validation-for="StockType.StockUnit" class="text-danger"></span>
		</div>

		<button class="btn btn-danger" type="submit">Delete</button>
		<a asp-area="Employee" asp-controller="StockType" asp-action="Index" class="btn btn-dark">Back To List</a>
	</div>
</form>


@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	
}
